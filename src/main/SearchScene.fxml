<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SearchController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="280.0">
         <children>
            <ListView fx:id="listView" layoutY="31.0" onMouseClicked="#listViewClickedEventHandle" prefHeight="568.0" prefWidth="280.0" />
            <TextField fx:id="searchBar" layoutY="-1.0" onKeyReleased="#searchBarEventHandle" prefHeight="32.0" prefWidth="280.0" />
         </children>
      </AnchorPane>
      <TabPane layoutX="280.0" prefHeight="600.0" prefWidth="460.0" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="600.0" tabMaxWidth="460.0">
        <tabs>
          <Tab fx:id="searchTab" onSelectionChanged="#searchTabSelectionEventHandle" text="Search">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="460.0">
                     <children>
                        <Label fx:id="wordLabel" layoutX="25.0" layoutY="14.0" prefHeight="32.0" prefWidth="410.0" />
                        <Label fx:id="meaningLabel" layoutX="25.0" layoutY="46.0" prefHeight="500.0" prefWidth="410.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="editTab" onSelectionChanged="#editTabSelectionEventHandle" text="Edit">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="460.0">
                     <children>
                        <AnchorPane layoutX="410.0" prefHeight="561.0" prefWidth="50.0">
                           <children>
                              <VBox prefHeight="560.0" prefWidth="50.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#newButtonEventHandle" prefHeight="51.0" prefWidth="50.0" text="new" />
                                    <Button mnemonicParsing="false" onAction="#addButtonEventHandle" prefHeight="51.0" prefWidth="50.0" text="add" />
                                    <Button mnemonicParsing="false" onAction="#deleteButtonEventHandle" prefHeight="53.0" prefWidth="50.0" text="del" />
                                    <Button mnemonicParsing="false" onAction="#saveButtonEventHandle" prefHeight="50.0" prefWidth="50.0" text="save" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="560.0" prefWidth="410.0">
                           <children>
                              <TextField fx:id="editWordField" layoutX="25.0" layoutY="14.0" onKeyPressed="#editWordFieldKeyEventHandle" prefHeight="31.0" prefWidth="360.0" />
                              <TextArea fx:id="editMeaningArea" layoutX="25.0" layoutY="58.0" prefHeight="480.0" prefWidth="360.0" />
                           </children>
                        </AnchorPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
